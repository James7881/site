{{#testimonials}}
<div class="testimonials">
	<div class="quotator">

		{{#each endorsements}}
		<div class="quote">
			<figure>
				<blockquote>
					<p>{{this.quote}}</p>
				</blockquote>

				<figcaption>
					<cite>
						<img data-src="{{@root.site.imgdir}}{{this.avatar}}" data-srcset="{{@root.site.imgdir}}{{this.avatarHiRes}} 2x" class="quote-avatar" alt="Avatar of {{this.cite}}">
						<small>
							<a href="{{this.twitter}}">{{this.cite}}</a> &bull; <a href="{{this.url}}">{{company}}</a>
						</small>
					</cite>
				</figcaption>
			</figure>
		</div>
		{{/each}}

	</div>
</div>
{{/testimonials}}
